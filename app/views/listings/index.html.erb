<div class="jumbotron">
  <h1>Get a awesome items</h1>
  <h2>this is a special oportunity.</h2>
</div>

<div class="row t-center">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing %>
        <div class="caption">
        <h3><%= listing.name %></h3>
        <p><%= number_to_currency(listing.price) %></p>
        <p><%= "Seller : #{listing.user.name}" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>


<br>

<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path %>
<% end %>
