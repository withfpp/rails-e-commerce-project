<table class="table table-bordered table-hover">
  <tr>
    <th class="t-center">Image</th>
    <th class="t-center">Name</th>
    <th class="t-center">Description</th>
    <th class="t-center">Price</th>
    <th class="t-center">Action</th>
  </tr>
  <% @listings.each do |listing| %>
  <tr>
    <td><%= image_tag listing.image.url, class: "small-thumb" %> </td>
    <td><%= listing.name %></td>
    <td><%= listing.description %></td>
    <td><%= number_to_currency(listing.price) %></td>
    <td>
      <!-- Single button -->
      <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          Action <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "View", listing, class: "btn btn-link" %></li>
          <li><%= link_to "Edit", edit_listing_path(listing), class: "btn btn-link" %></li>
          <li><%= link_to "Destory", listing, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-link" %></li>
        </ul>
      </div>


      
      
       
    </td>
  </tr>
  <% end %>
</table>



<br>

<% if user_signed_in? %>
<%= link_to 'New Product', new_listing_path %>
<% end %>
